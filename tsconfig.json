{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["es2017", "dom"],
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
      ],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "strict": true,
      "moduleResolution": "node",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts"
    ]
  }